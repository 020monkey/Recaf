<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level: %msg%n</pattern>
		</encoder>
	</appender>
	<logger name="recaf-logger" level="info" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
</configuration>